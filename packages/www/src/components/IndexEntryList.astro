---
import type { CollectionEntry } from "astro:content";
import IndexEntry from "./IndexEntry.astro";

interface Props {
  posts?: CollectionEntry<"posts">[];
  til?: CollectionEntry<"til">[];
}

const { posts, til } = Astro.props;
const kind = !!posts ? "post" : "til";
const sectionTitle = kind === "post" ? "Blog Posts" : "TIL";
---

<div>
  <div class="border-stone-150 pt-10">
    <div class="u-l-contain md:grid md:grid-cols-12 md:gap-4">
      <div class="md:col-start-4 md:col-span-9">
        <h2 class="text-stone-700 pb-6 text-lg italic">
          {sectionTitle}
        </h2>
      </div>
    </div>
  </div>

  <ul>
    {posts && posts.map((p) => <IndexEntry post={p} />)}
    {til && til.map((p) => <IndexEntry til={p} />)}
  </ul>
</div>
