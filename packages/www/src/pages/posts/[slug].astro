---
import Layout from "../../layouts/Layout.astro";
import Image from "../../components/Image.astro";
import { getCollection } from "astro:content";
import * as datefns from "date-fns";
import "../../main.css";

export async function getStaticPaths() {
  const posts = await getCollection("posts");
  return posts.map((post) => ({ params: { slug: post.slug }, props: post }));
}

const { data, slug } = Astro.props;
const { Content } = await Astro.props.render();
const url = `/posts/${slug}`;
---

<Layout title="TODO" description="TODO">
  <main>
    <article>
      <div class="l-wide">
        <div class="pt-14 pb-10 lg:pt-20 lg:pb-8">
          <h1 class="m-0 text-center text-4xl font-bold leading-tight">
            <a href={url}>{data.title}</a>
          </h1>

          <p class="pt-4 text-center text-gray-400 font-mono text-sm">
            <time>{datefns.format(data.date, "MM/dd/yyyy")}</time>
          </p>
        </div>
      </div>

      <div>
        {data.featuredImage ? (
          <Image data={data} />          
        ) : null}
      </div>

      <div class="l-narrow">
        <div class="post-content">
          <Content />
        </div>
      </div>
    </article>
  </main>
</Layout>
