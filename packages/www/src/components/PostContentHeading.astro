---
const { id, level } = Astro.props;

const classNames = {
  h1: "pb-3 pt-5 text-gray-800 text-3xl font-bold",
  h2: "pb-3 pt-5 text-gray-800 text-2xl font-bold",
  h3: "pb-3 pt-4 text-gray-600 text-xl font-bold",
  h4: "pb-3 pt-4 text-gray-600 text-xl font-bold",
  h5: "pb-3 pt-4 text-gray-400 text-lg font-bold",
  h6: "pb-3 pt-4 text-gray-400 text-lg font-bold",
} as const;
---

{
  level === 1 ? (
    <h1 class={classNames.h1} id={id}>
      <slot />
    </h1>
  ) : null
}
{
  level === 2 ? (
    <h2 class={classNames.h2} id={id}>
      <slot />
    </h2>
  ) : null
}
{
  level === 3 ? (
    <h3 class={classNames.h3} id={id}>
      <slot />
    </h3>
  ) : null
}
{
  level === 4 ? (
    <h4 class={classNames.h4} id={id}>
      <slot />
    </h4>
  ) : null
}
{
  level === 5 ? (
    <h5 class={classNames.h5} id={id}>
      <slot />
    </h5>
  ) : null
}
{
  level === 6 ? (
    <h6 class={classNames.h6} id={id}>
      <slot />
    </h6>
  ) : null
}
