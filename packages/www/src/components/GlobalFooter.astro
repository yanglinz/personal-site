---
let links = [
  ["Rss Feed", "/rss.xml"],
  ["Github", "https://github.com/yanglinz"],
];
---

<div class="py-14 lg:py-20 text-center">
  <div class="l-12-12 l-pad">
    <div class="u-f-mono">
      <div>
        {
          links.map(([title, url]) => (
            <>
              <span class="text-gray-400 font-mono text-xs md:text-sm">
                <a href={url}>{title}</a>
              </span>
              <span class="text-gray-200"> | </span>
            </>
          ))
        }

        <span class="text-gray-400 font-mono text-xs md:text-sm"
          >Yanglin Zhao &copy; 2025</span
        >
      </div>
    </div>
  </div>
</div>
