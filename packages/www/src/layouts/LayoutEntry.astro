---
import { type CollectionEntry } from "astro:content";
import * as datefns from "date-fns";
import { getId } from "../lib/astro";
import Layout from "../layouts/LayoutBase.astro";
import HeroImage from "../components/PostImageHero.astro";
import SpacerVertical from "../components/SpacerVertical.astro";

import "./LayoutEntry.css";

type EntryKind = "posts" | "til";

interface Props {
  kind: EntryKind;
  data: CollectionEntry<"posts"> | CollectionEntry<"til">;
}

const { kind, data } = Astro.props;
let postsData = data as CollectionEntry<"posts">;
let url = `/${kind}/${getId(data)}`;
---

<Layout title="Yanglin Zhao" description={data.data.description}>
  <main>
    <article>
      {
        kind === "posts" && postsData.data.featuredImage ? (
          <HeroImage id={getId(data)} post={postsData} />
        ) : null
      }

      <SpacerVertical />

      <div
        class="u-l-contain py-5 md:grid md:grid-cols-12 md:gap-4 border-b border-stone-200"
      >
        <div class="md:col-span-2">
          <p>
            <a href={url} class="u-f-serif italic text-stone-500 text-sm">
              <time>{datefns.format(data.data.date, "MM/dd/yyyy")}</time>
            </a>
          </p>
        </div>

        <div class="col-span-9">
          <a href={url}>
            <h3 class="pt-4 md:pt-0 text-3xl leading-10 font-bold2">
              {data.data.title}
            </h3>
          </a>
        </div>

        <SpacerVertical />
      </div>

      <div class="entry-content">
        <slot />
      </div>
    </article>
  </main>
</Layout>
