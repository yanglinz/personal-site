---
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'posts'>
}

const { post } = Astro.props;
const postUrl = `/posts/${post.slug}`;
---

<li class="border-gray-150 border-b py-3 md:flex md:items-center md:justify-between md:py-4 lg:py-6">
  <h3 class="flex-1 pr-5">
    <a href={postUrl} class="text-lg font-bold lg:text-3xl">
      {post.data.title}
    </a>
  </h3>

  <p class="flex-initial">
    <a
      href={postUrl}
      class="text-gray-400 font-mono text-xs md:text-sm"
    >
      time
      <!-- <time>{datefns.format(page.date, "MM/dd/yyyy")}</time> -->
    </a>
  </p>
</li>
