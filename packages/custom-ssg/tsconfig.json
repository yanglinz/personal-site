{
  "compilerOptions": {
    // Module target
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,

    // Strict mode
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // Preact JSX
    // https://preactjs.com/guide/v10/typescript/#typescript-configuration
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
  }
}
